<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data/>
    <LinearLayout android:id="@+id/linearColumnarrowleft"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"

        android:orientation="vertical" style="@style/groupStyleyellow_50">

        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumnifrenimiunut"
            android:layout_height="match_parent"

            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStyleyellow_50">
            <LinearLayout android:id="@+id/frameStackifrenimiunut"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginStart="@dimen/_29pxh" android:layout_width="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageForgotOne"
                    android:layout_width="@dimen/_229pxh"
                    android:layout_height="@dimen/_217pxh"
                    android:layout_gravity="top|center"
                    android:layout_marginStart="@dimen/_33pxh"
                    android:layout_marginEnd="@dimen/_33pxh"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:scaleType="centerInside"
                    android:src="@drawable/password_forgot"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/password_forgot" />
                <TextView android:ellipsize="end"
                    android:gravity="top|start"
                    android:id="@+id/txtIfrenimiunut"
                    android:layout_gravity="bottom|start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="match_parent"
                    android:singleLine="false"
                    android:text="@string/msg_ifreni_mi_unut2"
                    style="@style/txtMontserratromanmedium30" tools:text="@string/msg_ifreni_mi_unut2"/>
            </LinearLayout>>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtEpostaadresin"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_width="match_parent"
                android:singleLine="false"
                android:text="@string/msg_e_posta_adresin"
                style="@style/txtMontserratromanmedium14_1" tools:text="@string/msg_e_posta_adresin"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearColumnemail"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25pxh"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_43pxv"
                android:layout_width="match_parent"
                android:orientation="vertical" >
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEmail"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_19pxh"
                    android:layout_marginStart="@dimen/_19pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_e_mail"
                    style="@style/txtNunitoregular18" tools:text="@string/lbl_e_mail"/>
                <EditText

                    android:ellipsize="end"
                    android:id="@+id/etEmailOne"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16pxv"
                    android:layout_marginEnd="@dimen/_18pxh"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_11pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_11pxh"
                    android:paddingTop="@dimen/_12pxv"
                    android:background="@drawable/underline"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_50"
                    style="@style/etSolidRounded" tools:ignore="Autofill"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnBalantyGnder"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_58pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_17pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_17pxv"
                android:singleLine="true"
                android:text="@string/msg_ba_lant_y_g_nd"
                android:textAllCaps="false"
                style="@style/btnSolidRounded" tools:text="@string/msg_ba_lant_y_g_nd"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Ya da"
                    style="@style/txtMontserratromanregular20"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <TextView android:ellipsize="end"
                android:id="@+id/txtGiriyap"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_giri_yap2"
                style="@style/txtMontserratromanmedium20" tools:text="@string/lbl_giri_yap2"/>
        </LinearLayout>
    </LinearLayout>
</layout>
