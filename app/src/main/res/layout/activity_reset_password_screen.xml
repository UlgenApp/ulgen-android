<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <LinearLayout
        android:id="@+id/linearColumnarrowleft"
        style="@style/groupStyleyellow_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"

        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearColumnifrenimiunut"
            style="@style/groupStyleyellow_50"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/frameStackifrenimiunut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginEnd="@dimen/_29pxh"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageForgotOne"
                    android:layout_width="@dimen/_229pxh"
                    android:layout_height="@dimen/_217pxh"
                    android:layout_gravity="top|center"
                    android:layout_marginStart="@dimen/_33pxh"
                    android:layout_marginEnd="@dimen/_33pxh"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:scaleType="centerInside"
                    android:src="@drawable/password_forgot"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/password_forgot" />

                <TextView
                    android:id="@+id/txtIfrenimiunut"
                    style="@style/txtMontserratromanmedium30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:ellipsize="end"
                    android:gravity="top|start"
                    android:singleLine="false"
                    android:text="@string/msg_ifreni_mi_unut2"
                    tools:text="@string/msg_ifreni_mi_unut2" />
            </LinearLayout>
            >

            <TextView
                android:id="@+id/txtEpostaadresin"
                style="@style/txtMontserratromanmedium14_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_marginEnd="@dimen/_29pxh"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="false"
                android:text="@string/msg_e_posta_adresin"
                tools:text="@string/msg_e_posta_adresin" />

            <LinearLayout
                android:id="@+id/linearColumnemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_43pxv"
                android:layout_marginEnd="@dimen/_25pxh"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEmail"
                    style="@style/txtNunitoregular18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_19pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_19pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_e_mail"
                    tools:text="@string/lbl_e_mail" />

                <EditText

                    android:id="@+id/etEmailOne"
                    style="@style/etSolidRounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_marginEnd="@dimen/_18pxh"
                    android:layout_marginBottom="@dimen/_16pxv"
                    android:background="@drawable/underline"
                    android:ellipsize="end"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_11pxh"
                    android:paddingTop="@dimen/_12pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_11pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_50"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBalantyGnder"
                style="@style/btnSolidRounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_58pxv"
                android:layout_marginEnd="@dimen/_29pxh"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_17pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_17pxv"
                android:singleLine="true"
                android:text="@string/msg_ba_lant_y_g_nd"
                android:textAllCaps="false"
                tools:text="@string/msg_ba_lant_y_g_nd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray" />

                <TextView
                    style="@style/txtMontserratromanregular20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Ya da" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtGiriyap"
                style="@style/txtMontserratromanmedium20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_29pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_giri_yap2"
                tools:text="@string/lbl_giri_yap2" />
        </LinearLayout>
    </LinearLayout>
</layout>
